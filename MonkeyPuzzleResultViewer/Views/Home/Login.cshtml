@model MonkeyPuzzleResultViewer.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

        <div id="login">
            @using (Html.BeginForm("AuthoriseLogin", "Home", FormMethod.Post))
        {
            <table>
                <tr>
                    <td></td>
                    <td style="text-decoration:underline"><b>Login</b></td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.userID, new { htmlAttributes = new { @class = "form-control" } }):
                    </td>
                    <td>
                        @Html.EditorFor(model => model.userID, new { htmlAttributes = new { required = "True", @class = "form-control", placeholder = "1234" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.userPassword, new { htmlAttributes = new { @class = "form-control" } }):
                    </td>
                    <td>
                        @Html.EditorFor(model => model.userPassword, new { htmlAttributes = new { required = "True", @class = "form-control", placeholder="Password" } })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td style="color:red;">
                        @Html.DisplayFor(model => model.ErrorMessage)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="name" value="Login" />
                        <input type="reset" name="name" value="Clear" />
                    </td>
                </tr>
            </table>
    }
        </div>
