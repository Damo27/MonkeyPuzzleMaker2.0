<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Monkey Puzzle", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Take Test", "Index", "Tests")</li>
                    <li>@Html.ActionLink("View Marks", "Index", "Marks")</li>
                    <li>@Html.ActionLink("View Memo", "PickMemo", "Marks")</li>
                    <li>@Html.ActionLink("Account Details", "Edit", "Users")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                </ul>
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        <div class="jumbotron" style="background: url(../../Content/images/monkeyBanner.jpg); background-size: 100% 100%; margin-top:20px">
            <h1 style="text-align: center; color:white;">Monkey Puzzle Result Viewer</h1>
            <p style="text-align: center; color:white;">
                ........................................................................................................
            </p>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Monkey Puzzle Result Viewer</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
