<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #login {
            position: absolute;
            left: 35%;
            top: 45%;
        }
    </style>
</head>
    <body>
        <div class="container body-content">
            <div class="jumbotron" style="background: url(../../Content/images/monkeyBanner.jpg); background-size: 100% 100%;">
                <h1 style="text-align: center; color:white;">Monkey Puzzle Result Viewer</h1>
                <p style="text-align: center; color:white;">
                    ........................................................................................................
                </p>
            </div>
            @RenderBody()

            <footer style="position:absolute; bottom:10%">
                <hr />
                <p>&copy; @DateTime.Now.Year - Monkey Puzzle Result Viewer</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
